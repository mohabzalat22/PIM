{
  "version": "0.2.0",
  "configurations": [
    {
      // FRONTEND — runs your Vite/React/Vue/Next dev server
      "name": "Frontend (Vite or React)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client/src",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      // BACKEND — runs your Node.js server
      "name": "Backend (Node.js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/app.js",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "nodemon",
      "restart": true,
    }
  ],
  "compounds": [
    {
      // Runs both at once!
      "name": "Run Frontend + Backend",
      "configurations": ["Backend (Node.js)", "Frontend (Vite or React)"]
    }
  ]
}
